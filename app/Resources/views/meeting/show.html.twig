{% extends 'base.html.twig' %}

{% block body %}
    <h1>Meeting</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ meeting.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ meeting.name }}</td>
            </tr>
            <tr>
                <th>Starttime</th>
                <td>{% if meeting.startTime %}{{ meeting.startTime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Endtime</th>
                <td>{% if meeting.endTime %}{{ meeting.endTime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ meeting.location }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ meeting.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('meeting_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('meeting_edit', { 'id': meeting.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
