{% extends 'base.html.twig' %}

{% block body %}
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="block-header">
                    <h2>Person</h2>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="body table-responsive">
                            <table class="table table-striped">
                                <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ person.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Name</th>
                                        <td>{{ person.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Social Security Number</th>
                                        <td>{{ person.socialSecurityNumber }}</td>
                                    </tr>
                                    <tr>
                                        <th>Age</th>
                                        <td>{{ person.age }}</td>
                                    </tr>
                                    <tr>
                                        <th>Gender</th>
                                        <td>{{ person.gender }}</td>
                                    </tr>
                                </tbody>
                            </table>

                            <ul>
                                <a href="{{ path('person_index') }}"> <button type="button" class="btn btn-primary">Back</button></a>
                                <a href="{{ path('person_edit', { 'id': person.id }) }}"><button type="button" class="btn btn-success">Edit</button></a>

                            </ul>
                            {{ form_start(delete_form) }}
                                <input type="submit" value="Delete" class="btn btn-danger pull-right">
                            {{ form_end(delete_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
