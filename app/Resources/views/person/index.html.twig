{% extends 'base.html.twig' %}

{% block body %}
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="block-header">
                    <h2>People List</h2>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="body table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Social Security Number</th>
                                        <th>Age</th>
                                        <th>Gender</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for person in people %}
                                    <tr>
                                        <td>{{ person.name }}</td>
                                        <td>{{ person.socialSecurityNumber }}</td>
                                        <td>{{ person.age }}</td>
                                        <td>{{ person.gender }}</td>
                                        <td>

                                            <a href="{{ path('person_show', { 'id': person.id }) }}" data-toggle="tooltip" data-placement="top" title="Show">
                                                <button type="button" class="btn btn-primary btn-circle waves-effect waves-circle waves-float">
                                                    <i class="material-icons">filter_none</i>
                                                </button>
                                            </a>
                                            <a href="{{ path('person_edit', { 'id': person.id }) }}" data-toggle="tooltip" data-placement="top" title="Edit">
                                                <button type="button" class="btn btn-success btn-circle waves-effect waves-circle waves-float">
                                                    <i class="material-icons">mode_edit</i>
                                                </button>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
             <button type="button" class="btn btn-default btn-circle-lg waves-effect waves-circle waves-float pull-right">
            <a href="{{ path('person_new') }}" data-toggle="tooltip" data-placement="top" title="Novo">
                <i class="material-icons">add_box</i>
            </a>
        </button>
        </div>
    </section>
{% endblock %}
